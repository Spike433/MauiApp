<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AirApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AirApp"
    xmlns:views="clr-namespace:AirApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="tab_home.svg">  
            <ShellContent Title="Statuses" ContentTemplate="{DataTemplate views:Home}"/>
        </Tab>
        <Tab Title="Statuses" Icon="tab_map.png">
            <ShellContent Title="Statuses" ContentTemplate="{DataTemplate views:EnvironmentStatusPage}"/>
        </Tab>
        <Tab Title="Settings" Icon="tab_settings.svg">
            <ShellContent Title="Statuses" ContentTemplate="{DataTemplate views:Settings}"/>
        </Tab>
    </TabBar>


</Shell>
